{
  "extends": "@synestra/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@payload-config": [
        "./src/payload.config.ts"
      ],
      "react": [
        "./node_modules/@types/react"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/typescript-config/next-env.d.ts",
    "../../packages/typescript-config/**/*.ts",
    "../../packages/typescript-config/**/*.tsx",
    "../../packages/typescript-config/.next/types/**/*.ts",
    ".next/types/**/*.ts"
  ]
}
